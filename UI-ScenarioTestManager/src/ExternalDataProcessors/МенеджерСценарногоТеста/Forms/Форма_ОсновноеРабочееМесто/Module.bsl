								+ ОписаниеПодключения.Получить("Пароль1С") + """ ", "") + " "
								+ ОписаниеПодключения.Получить("ДополнительныеОпцииЗапуска");
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
			Исключение			КонецПопытки;
			
			Если СоответсвиеПортовКлиентовТестирования.Получить(НомерПорта)<>Неопределено Тогда
