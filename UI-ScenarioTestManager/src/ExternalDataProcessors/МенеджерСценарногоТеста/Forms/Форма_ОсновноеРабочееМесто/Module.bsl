		Агент_СтруктураОтвета.Вставить("ИмяКоманды","СценарийЗавершен");
	КонецЕсли;
	
	ТекущийНомерСообщения = ТекущийНомерСообщения+1;
	// отвечаем
	мАгент_ВыполнитьЗаписьВКаталогОбмена();	

