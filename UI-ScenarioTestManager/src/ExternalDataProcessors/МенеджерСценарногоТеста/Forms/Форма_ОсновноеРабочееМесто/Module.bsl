	Если Узел=Неопределено Тогда
		Возврат Счетчик;
	КонецЕсли;
	
	УзелРодитель = Узел.ПолучитьРодителя();
	Счетчик = Счетчик + 1;
	Возврат ПолучитьУровень(УзелРодитель,Счетчик);
	
