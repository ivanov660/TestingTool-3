			Если НЕ ЗначениеЗаполнено(Наименование) Тогда
				ТестРезультатСтруктура.Представление = "№ DDT "+Формат(ТекущийНомерШагаDDT,"ЧГ=")+" '"+ТестРезультатСтруктура.Представление+"'";
